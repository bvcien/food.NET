@{
    ViewData["Title"] = "Payment Success";
    Layout = "_LayoutNull";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="liveToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Payment Success HAHAHAHA
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn-close btn-close-white me-2 m-auto" aria-label="Close">
                Trang chủ
            </a>

        </div>
    </div>
</div>
<script>
    // Tìm phần tử toast khi trang tải
    var toastEl = document.getElementById('liveToast');
    if (toastEl) {
        // Khởi tạo Toast từ phần tử đó
        var toast = new bootstrap.Toast(toastEl);
        toast.show();  // Hiển thị Toast ngay lập tức
    }
</script>
